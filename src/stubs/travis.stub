language: php

env:
  global:
    - disable-xdebug=true

matrix:
  include:
{phpVersions}
  fast_finish: true

cache:
  directories:
    - $HOME/.composer/cache

before_script:
  - if [[ $disable-xdebug = true ]]; then
      phpenv config-rm xdebug.ini;
    fi
  - travis_retry composer self-update
  - travis_retry composer install --no-interaction

script:
  - composer test
