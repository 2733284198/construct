{
    "name": "jonathantorres/logger",
    "description": "PHP project.",
    "keywords": [],
    "license": "MIT",
    "authors": [
        {
            "name": "Jonathan Torres",
            "email": "jonathantorres41@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.0"
    },
    "autoload": {
        "psr-4": {
            "Jonathantorres\\Logger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jonathantorres\\Logger\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "configure-commit-template": "git config --add commit.template .gitmessage",
        "cs-fix": "php-cs-fixer fix . -vv || true",
        "cs-lint": "php-cs-fixer fix --diff --stop-on-violation --verbose --dry-run",
        "test": "phpunit"
    },
    "scripts-descriptions": {
        "configure-commit-template": "Configures a local Git commit message template.",
        "cs-fix": "Fixes existing coding standard violations.",
        "cs-lint": "Checks for coding standard violations.",
        "test": "Runs all tests."
    }
}
