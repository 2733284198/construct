language: php

php:
  - hhvm
  - nightly
  - 5.6
  - 7.0

cache:
  directories:
    - $HOME/.composer/cache

before_script:
  - if [[ $TRAVIS_PHP_VERSION != hhvm && $TRAVIS_PHP_VERSION != nightly ]]; then phpenv config-rm xdebug.ini; fi
  - travis_retry composer self-update
  - travis_retry composer install --no-interaction

script:
  - composer cs-lint
  - composer test
