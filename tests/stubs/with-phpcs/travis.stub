language: php

git:
  depth: 2

matrix:
  include:
    - php: hhvm
    - php: nightly
    - php: 5.6
      env:
      - DISABLE_XDEBUG=true
    - php: 7.0
      env:
      - DISABLE_XDEBUG=true
    - php: 7.1
      env:
      - LINT=true
  fast_finish: true

cache:
  directories:
    - $HOME/.composer/cache

before_script:
  - if [[ $DISABLE_XDEBUG = true ]]; then
      phpenv config-rm xdebug.ini;
    fi
  - travis_retry composer self-update
  - travis_retry composer install --no-interaction

script:
  - if [[ $LINT = true ]]; then
      composer cs-lint;
    fi
  - composer test
