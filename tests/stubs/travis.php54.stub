language: php

env:
  global:
    - disable-xdebug=true

matrix:
  include:
    - php: hhvm
      env: disable-xdebug=false
    - php: nightly
      env: disable-xdebug=false
    - php: 5.4
    - php: 5.5
    - php: 5.6
    - php: 7.0
    - php: 7.1
      env: disable-xdebug=false
  fast_finish: true

cache:
  directories:
    - $HOME/.composer/cache

before_script:
  - if [[ $disable-xdebug = true ]]; then
      phpenv config-rm xdebug.ini;
    fi
  - travis_retry composer self-update
  - travis_retry composer install --no-interaction

script:
  - composer test
